@model CategoriasMvc.Models.ProdutoViewModel

<h2>Criar um Produto</h2>

<form asp-action="CriarNovoProduto">
    <div class="form-horizontal">
        </hr>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Preco" class="col-md-2" control-label></label>
            <div class="col-md-10">
                <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImagemUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoriaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categorias">
                    <option value="">-- Selecione uma Categoria --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </div>
    </div>
    @if (ViewBag.Erro != null)
    {
        <div style="color:red">
            <h4>@ViewBag.Erro</h4>
        </div>
    }
</form>
