@model CategoriasMvc.Models.ProdutoViewModel

<h3>Deletar Produto</h3>

<h4>Confirma a exclusão deste Produto ?</h4>

<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.CategoriaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.CategoriaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.ImagemUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.ImagemUrl)
        </dd>
    </dl>

    <div class="row">
        <div class="form-group col-md-6" style="padding: 10px">
            @if (string.IsNullOrEmpty(Model.ImagemUrl))
            {
                <img src="~/imagens/noimage1.png" />
            }
            else
            {
                <img src="@Model.ImagemUrl" />
            }
        </div>
    </div>

    <form asp-action="DeletarProduto">
        <input type="hidden" asp-for="ProdutoId" />
        <div class="form-group" style="padding-top: 10px">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info">Retornar</a>
        </div>
    </form>
</div>